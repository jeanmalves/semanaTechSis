@model IEnumerable<SemanaAcademica.Areas.Admin.Models.ListarHorarioModel>

@{
    ViewBag.Title = "Horários";
}
<h2>Horários </h2>
<br />
<h3>Evento: @ViewBag.Evento</h3>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horafim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horafim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @Html.ActionLink("Excluir", "Delete", new { id = item.idHorario })
                </td>
            </tr>
        }

    </table>
}
<section style="margin-top:20px">
    @{Html.RenderPartial("_CadastrarHorario",
        new SemanaAcademica.Areas.Admin.Models.CadastrarHorarioModel() {
            idEvento = Int32.Parse(Request.RequestContext.RouteData.Values["id"].ToString()),
            HoraInicio = DateTime.Now,
            Horafim = DateTime.Now
        });    
    }
</section>